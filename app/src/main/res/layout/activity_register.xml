<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/register"
    android:background="@drawable/login_background"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".RegisterActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/register_greet"
            android:textSize="20sp"
            android:textColor="@color/text"
            android:gravity="center"
            android:fontFamily="@font/delius_regular"/>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:hint="@string/username"
            android:textColorHint="@color/text"
            android:gravity="center"
            android:background="@drawable/button_border"
            android:padding="15dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:drawableStart="@drawable/baseline_account_box_24"
                android:drawablePadding="8dp"
                android:textColor="@color/text"
                android:fontFamily="@font/delius_regular"
                android:id="@+id/editUsername"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:hint="@string/name"
            android:textColorHint="@color/text"
            android:gravity="center"
            android:background="@drawable/button_border"
            android:padding="15dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:drawableStart="@drawable/baseline_account_box_24"
                android:drawablePadding="8dp"
                android:textColor="@color/text"
                android:fontFamily="@font/delius_regular"
                android:id="@+id/editName"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:hint="@string/email"
            android:textColorHint="@color/text"
            android:gravity="center"
            android:background="@drawable/button_border"
            android:padding="15dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:drawableStart="@drawable/email_svgrepo_com"
                android:drawablePadding="8dp"
                android:textColor="@color/text"
                android:fontFamily="@font/delius_regular"
                android:id="@+id/editEmail"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:hint="@string/phone_number"
            android:textColorHint="@color/text"
            android:gravity="center"
            android:background="@drawable/button_border"
            android:padding="15dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:drawableStart="@drawable/phone_svgrepo_com"
                android:drawablePadding="8dp"
                android:textColor="@color/text"
                android:fontFamily="@font/delius_regular"
                android:id="@+id/editPhonenumber"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_border"
            android:hint="@string/password"
            android:padding="15dp"
            android:textColor="@color/text"
            android:textColorHint="@color/text"
            android:gravity="center"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableStart="@drawable/lock"
                android:drawablePadding="8dp"
                android:inputType="textPassword"
                android:textColor="@color/text"
                android:textSize="15sp"
                android:fontFamily="@font/delius_regular"
                android:id="@+id/editPassword"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_border"
            android:hint="@string/confirm_password"
            android:padding="15dp"
            android:textColor="@color/text"
            android:textColorHint="@color/text"
            android:gravity="center"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableStart="@drawable/lock"
                android:drawablePadding="8dp"
                android:inputType="textPassword"
                android:textColor="@color/text"
                android:textSize="15sp"
                android:fontFamily="@font/delius_regular"
                android:id="@+id/editConfirmPassword"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/registerButton"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/button"
            android:text="@string/register_button"
            android:textColor="@color/button_text"
            android:textSize="25sp"
            android:fontFamily="@font/delius_regular"
            />

        <!-- ID is required for clickable text -->
        <TextView
            android:id="@+id/tv_switch_to_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/text"
            android:textSize="15sp"
            android:text="@string/switch_to_login"
            android:textStyle="bold"
            android:fontFamily="@font/delius_regular"/>
    </LinearLayout>

</RelativeLayout>